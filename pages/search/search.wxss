page{
  background: #fafafa;
}
.sousuo{
  width: 100%;
  height: 100rpx;
  border: 1px solid #f5f5f5;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: white;
  position: fixed;
  z-index: 100;
  top: 0;
}
.sousuo .cont1{
  background: #f5f5f5;
  width: 622rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  margin-left: 30rpx; 
}
.sousuo .cont1 .left{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
}
.sousuo .cont1 image{
  width: 21rpx;
  height: 21rpx;
  margin-left: 62rpx;
  margin-right: 20rpx;
  display: block;
}
.sousuo .cont1 input{
  color: #949494; 
  width: 500rpx;
}

.sousuo .btn{
  font-size: 26rpx;
  color: #4593eb;
  min-width:100%; 
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
}

.cont2{
  width: 100%;
  height: 100%;
  margin-top: 100rpx;
  background: white;
}
.cont2 .box{
  width: 100%;
  height: 220rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #dddddd;
  padding-left: 30rpx;
}
.cont2 .box image{
  width: 200rpx;
  height: 180rpx;
}
.cont2 .box .rel{
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 30rpx;
}
.cont2 .box .rel .title{
  width: 450rpx;
  font-size: 35rpx;
  display: block;
}
.cont2 .box .rel .money{
  color: #ff2341;
  font-size: 30rpx;
  font-weight: bold;
}
.hide{
  display: none;
}

.status{
  
  text-align: center;
 
}
.status image{
  width: 323rpx;
  height: 366rpx;
  margin-top: 228rpx;
}

::-webkit-scrollbar {

  width: 0;

  height: 0;

  color: transparent;

}