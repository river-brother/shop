  position: absolute;
   top: 15rpx;
  left: 305rpx; 
  width: 145rpx;
  height: 50rpx;
  background: white;
  z-index: 100;
  text-align: center;
  line-height: 50rpx;
}
.merchant .shopp> view:nth-child(3){
  font-size: 26rpx;
  color: #949494;
  position: absolute;
  top: 25rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.merchant .shopp> view:nth-child(3) text{
  margin-right: 15rpx;
}
.merchant .shopp> view:nth-child(3) image{
  margin-right: 0rpx;
}
.merchant .shopp .box{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.merchant .shopp .list image{
  width: 335rpx;
  height: 288rpx;
}
.merchant .shopp .list .title{
  width: 335rpx;
  font-size: 28rpx;
}
.merchant .shopp .list .money{
  color: #ff2341;
  font-size: 26rpx;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
}