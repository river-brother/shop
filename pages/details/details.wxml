<view class='details'>
  <view style="height:{{zhu_H}}px;width:100%; background: url({{main_img}}) no-repeat; background-size:cover;" bindtap='zhu_tu'>
     <!-- <image class='main' src='{{main_img}}' style='width:100%;height:100%'  bindtap='zhu_tu' ></image>  -->
  </view>
  <view class='bigbox'>
    <view class='box' style='min-height:{{heights}}px'>
      <view class='name'>
        <view><text>{{title}}</text></view>
        <view><text class="{{item.price === '' ? 'hide':''}}">￥</text><text>{{price}}</text></view>
      </view>

      <view class="size {{spec ? 'show' : 'hide'}}" >
        <text>{{spec}}</text>
      </view>
      
      <view class="referral {{desc === '' && list.length === 0 ? 'hide' : 'show'}}">
        <text class="{{desc === null ? 'hide' : 'show'}}">{{referral}}</text>
        <view>{{desc}}</view>
        <view style='width:{{proWidth}}px'>
          <block wx:for="{{list}}" wx:key="" wx:if="{{index < 5}}">
            <image src='{{item}}' style='width:{{proWidth}}px;height:{{proHeight}}px' data-index="{{index}}" bindtap='previewlmg'></image>
          </block>
        </view>      
      </view>
    </view>

    <view class="logo">
      <image src='../img/farmer.png'></image>
      <text>农夫未来提供技术支持</text>
    </view> 
  
  </view>

</view>
