.merchant{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.merchant .imgs{
  width: 100%;
  height: 355rpx;
  position: relative;
}
.merchant .imgs image{
  width: 100%;
  height: 355rpx;
}
.merchant .imgs text{
  color: white;
  position: absolute;
  width: 90rpx;
  height: 40rpx;
  background: black;
  border-radius: 22rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 40rpx;
  right: 20rpx;
  top: 34rpx;
}
.merchant .theme{
  width: 705rpx;
  height: 300rpx;
  border-radius: 20rpx;
  background: #ffffff;
  position: absolute;
  top: 285rpx;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
  box-shadow: 0px 20rpx 10px #f9f9f9;
}
.merchant .theme .enter{
  width: 10rpx;
  height: 17rpx;
  margin-right: 30rpx;
}
.merchant .theme .laba{
  width: 28rpx;
  height: 27rpx;
}
.merchant .theme .name{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.merchant .theme .name>text{
  font-weight: bold;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  margin-left: 278rpx;
}
.merchant .theme .name view text{
  margin-right: 15rpx;
}
.merchant .theme .name view{
  color: #949494;
  font-size: 22rpx;
}
.merchant .theme .type{
  display: block;
  width: 132rpx;
  height: 44rpx;
  border: 2px solid #cccccc;
  border-radius: 10rpx;
  color: #949494;
  font-size: 26rpx;
  text-align: center;
  line-height: 44rpx;
  margin-top: 22rpx;
  margin-bottom: 40rpx;
  letter-spacing: 2rpx;
}
.merchant .theme .time{
  font-size: 26rpx;
  margin-bottom: 35rpx;
  letter-spacing: 2rpx;
}
.merchant .theme .notice{
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 78rpx;
  letter-spacing: 2rpx;
}
.merchant .theme .notice image{
  margin-right: 20rpx;
}
.merchant .phone{
  width: 100%;
  height: 90rpx;
  background: red;
  margin-top: 325rpx;
}
.merchant .phone image{
  width: 32rpx;
  height: 32rpx;
}