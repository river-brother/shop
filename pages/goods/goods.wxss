page{
  background: #fafafa; 
}
.goods .sousuo{
  width: 100%;
  height: 100rpx;
  border: 1px solid #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
}
.goods .sousuo view{
  background: #f5f5f5;
  width: 705rpx;
  height: 55rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.goods .sousuo image{
  width: 21rpx;
  height: 21rpx;
  margin-left: 62rpx;
  margin-right: 20rpx;
}
.goods .sousuo input{
  color: #949494;
  font-size: 26rpx;  
}

.goods .cont{
  width: 100%;
  height: 100%;
}
.goods .cont .left{
  width: 22%;
  float: left;
}
.goods .cont .box{
  height: 80rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 80rpx;
}
.goods .cont .right{
  width: 78%;
  height: 915rpx; 
  /* height: 50%; */
  background: white;
  float: left;
  overflow: auto;
  flex: 1;
}
.goods .cont .right .box .mold{
  display: flex;
  font-size: 26rpx;
  width: 100%;
  height: 55rpx;
  border: 1px solid #f5f5f5;
  line-height: 55rpx;
  padding-left: 20rpx;
  border-top: 0;
  margin-bottom: 24rpx;
}
.goods .cont .right .box image{
  width: 200rpx;
  height: 162rpx;
  border-radius: 5rpx;
  margin-right: 27rpx;
}
.goods .cont .right .box .title{
  font-size: 30rpx;
  display: block;
  width: 280rpx;
  line-height: 40rpx;
  text-align: left;
}
.goods .cont .right .box .money{
  color: #ff2341;
  margin-top: 33rpx;
}
.goods .cont .right .box .row {
  display: flex;
  padding-left: 20rpx;
  margin-bottom: 40rpx;
} 
.goods .cont .right .box .row:last-child{
  margin-bottom: 0rpx;
}
.goods .cont .right .box .rel {
  height: 162rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
} 

.left_cell_selected{
  background: white;
}