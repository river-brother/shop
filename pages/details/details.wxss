page{
  background: #fafafa;
}

.details{
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.details .main{
  width: 100%;
  /* height: 425rpx; */
}
.details .bigbox{
  width: 673rpx;
  border-radius: 10rpx;
  background: white;
  position: absolute;
  box-shadow: 0px 5rpx 80rpx #969696;
  top: 350rpx;
}
.details .bigbox .name{
  display: flex;
  justify-content: space-between;
  margin-left: 30rpx;
}
.details .bigbox .name view:nth-child(1){
  width: 375rpx;
  height: 154rpx;
  border-bottom: 2rpx solid #ebebeb;
  font-weight: bold;
  font-size: 32rpx;
}
.details .bigbox .name view:nth-child(1) text{
  width: 300rpx;
  display: block;
  padding-top: 40rpx;
  line-height: 50rpx;
}
.details .bigbox .name view:nth-child(2){
  color: #ff2341;
  font-size: 30rpx;
  margin-top: 40rpx;
  margin-right: 28rpx;
}
.details .bigbox .size{
  font-size: 26rpx;
  width: 375rpx;
  border-bottom: 2rpx solid #ebebeb;
  margin-left: 30rpx;
}
.details .bigbox .size text{
  letter-spacing: 2rpx;
  /* padding-top: 20rpx;
  padding-bottom: 20rpx; */
   line-height: 40rpx; 
  /* white-space:nowrap; */
  display: block;
}
.details .bigbox .size text:nth-child(1){
  padding-top: 20rpx;
}
.details .bigbox .size text:last-child{
  padding-bottom: 20rpx;
}
.details .bigbox .referral{
  margin-left: 25rpx;
  margin-right: 30rpx;
}
.details .bigbox .referral text{
  color: #979797;
  font-size: 26rpx;
  margin-top: 35rpx;
  margin-bottom: 35rpx;
}
.details .bigbox .referral view:nth-child(2){
  font-size: 26rpx;
  line-height: 38rpx;
  letter-spacing: 2rpx;
  margin-bottom: 10rpx;
}

.details .bigbox .referral image{
  width: 610rpx;
  height: 300rpx;
  margin-top: 35rpx;
}
.details .bigbox .referral image:last-child{
  margin-bottom: 20rpx;
}
 .details .show{
  display: block;
}
.details .hide{
  display: none;
} 
