page{
  background: #fafafa;
}
.sousuo{
  width: 100%;
  height: 100rpx;
  border: 1px solid #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
  position: fixed;
  z-index: 100;
  top: 0;
}
.sousuo .cont1{
  background: #f5f5f5;
  width: 700rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx; 
}
.sousuo .cont1 .left{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
}
.sousuo .cont1 image{
  width: 21rpx;
  height: 21rpx;
  padding-left: 62rpx;
  margin-right: 20rpx;
}
.sousuo .cont1 input{
  color: #949494; 
}

.sousuo .cont1 .btn{
  display: block;
  width: 100rpx;
  height: 55rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 55rpx;
  border-top-right-radius: 26rpx;
  border-bottom-right-radius: 26rpx;
  border-left: 1rpx solid #dddddd;
}

.cont2{
  width: 100%;
  height: 100%;
  margin-top: 100rpx;
  background: white;
}
.cont2 .box{
  width: 100%;
  height: 220rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #dddddd;
  padding-left: 30rpx;
}
.cont2 .box image{
  width: 200rpx;
  height: 180rpx;
}
.cont2 .box .rel{
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 30rpx;
}
.cont2 .box .rel .title{
  width: 450rpx;
  font-size: 35rpx;
  display: block;
}
.cont2 .box .rel .money{
  color: #ff2341;
}
